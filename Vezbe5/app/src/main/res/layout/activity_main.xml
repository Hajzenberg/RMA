<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.MainActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/startStudentActivityForResultBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/startPreferenceActivityForResultBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Start Student Activity for result"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="56dp"/>

    <Button
        android:id="@+id/startPreferenceActivityForResultBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/startStudentActivityForResultBtn"
        app:layout_constraintBottom_toTopOf="@id/inputAndImageBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Start Preference Activity for result"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="56dp"/>

    <Button
        android:id="@+id/inputAndImageBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/startPreferenceActivityForResultBtn"
        app:layout_constraintBottom_toTopOf="@id/scrollBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Input and image"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="56dp"/>

    <Button
        android:id="@+id/scrollBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/inputAndImageBtn"
        app:layout_constraintBottom_toTopOf="@id/linearBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Scroll"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="56dp"/>

    <Button
        android:id="@+id/linearBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/scrollBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Linear (weight, padding, margin)"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="56dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>